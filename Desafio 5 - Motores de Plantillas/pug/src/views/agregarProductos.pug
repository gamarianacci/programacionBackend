extends index.pug

block agregarProductos
    h1(class="m-3 display-1 text-primary text-center") Agregar Producto
    form(class="m-3" action="http://localhost:8080/productos" method="post")
        div(class="mb-3")
            label(for="inputNombre" class="form-label") Nombre
            input(type="text" class="form-control" id="inputNombre" placeholder="Lapicera" name="title")
        div(class="mb-3")
            label(for="inputPrecio" class="form-label") Precio
            input(type="number" class="form-control" id="inputPrecio" placeholder="200" name="price")
        div(class="mb-3")
            label(for="inputFotoURL" class="form-label") Precio
            input(type="url" class="form-control" id="inputFotoURL" placeholder="https://http2.mlstatic.com/lapicera" name="thumbnail")
        div(class="text-center")
            button(type="submit" class="btn btn-primary") Enviar
    form(class="text-center" action="http://localhost:8080/productos")
        button(type="submit" class="btn btn-primary m-3 mt-0") Ver Productos